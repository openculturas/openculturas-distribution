{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>devops/renovate-config",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "config/**",
    ".ddev/docker-compose.phpmyadmin.yaml",
    "profile/themes/openculturas_base/starterkits/**"
  ],
  "packageRules": [
    {
      "description" : "Do not try to update php, node",
      "matchDepNames": [
        "php",
        "node"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "ajaxorg/ace-builds",
        "choices-js/choices.js",
        "dynamicweb/swiffy-slider",
        "elmarquis/leaflet.gesture-handling",
        "heiseonline/shariff",
        "leaflet/leaflet.fullscreen",
        "leaflet/leaflet.markercluster",
        "fengyuanchen/cropperjs",
        "fengyuanchen/jquery-cropper",
        "openculturas/openculturas-profile",
        "fortawesome/font-awesome"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "seleniarm/standalone-chromium",
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchPackageNames": [
        "drupal/eca",
        "drupal/eca_ui",
        "drupal/eca_modeller_bpmn",
        "drupal/bpmn_io",
        "drupal/eca_flag"
      ],
      "groupName": "ECA"
    },
    {
      "matchPackageNames": [
        "eslint",
        "stylelint"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
